@model ITnetworkProjekt.Models.InsuranceViewModel

@{
    ViewData["Title"] = "Upravit";
}

<h4>Pojištění</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group pb-2">
                <label asp-for="InsuredPersonID" class="control-label"></label>
                <select asp-for="InsuredPersonID" class="form-control" asp-items="ViewBag.InsuredPersonID"></select>
                <span asp-validation-for="InsuredPersonID" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="PolicyType" class="control-label"></label>
                <input asp-for="PolicyType" class="form-control" />
                <span asp-validation-for="PolicyType" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" value="@Model.EndDate?.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="PremiumAmount" class="control-label"></label>
                <input asp-for="PremiumAmount" class="form-control" type="number" />
                <span asp-validation-for="PremiumAmount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="text-end">
    <a asp-action="Index">Zpátky na seznam</a>
</div>

